<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginRight="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Birthday"
            android:id="@+id/tBday"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/small_margin"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hobbies"
            android:id="@+id/tHobbies"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tBday"
            android:layout_marginBottom="@dimen/big_margin"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:layout_toRightOf="@id/title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DD/MM/YYYY"
            android:id="@+id/tmBday"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/small_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hobby 1, Hobby 2, Hobby 3"
            android:id="@+id/tmHobbies"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tmBday"
            android:layout_marginBottom="@dimen/big_margin"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Interest Groups"
        android:id="@+id/tGroup"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title"
        android:layout_marginBottom="@dimen/small_margin"
        android:textStyle="bold"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/gvGroup"
        android:layout_below="@+id/tGroup"
        android:layout_marginBottom="@dimen/big_margin"/>

</RelativeLayout>