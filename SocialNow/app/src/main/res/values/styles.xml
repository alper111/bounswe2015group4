<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:checkboxStyle">@style/dCheckBox</item>
        <item name="android:editTextStyle">@style/dEditText</item>
        <item name="android:buttonStyle">@style/dBigButton</item>
    </style>

    <style name="dCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="dEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">@dimen/et_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/et_top_bottom_padding</item>
        <item name="android:paddingLeft">@dimen/et_left_right_padding</item>
        <item name="android:paddingRight">@dimen/et_left_right_padding</item>
        <item name="android:background">@drawable/fetround</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dBigButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">@dimen/et_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/et_top_bottom_padding</item>
        <item name="android:paddingLeft">@dimen/et_left_right_padding</item>
        <item name="android:paddingRight">@dimen/et_left_right_padding</item>
        <item name="android:textColor">@color/colorDarkButton</item>
    </style>
</resources>

